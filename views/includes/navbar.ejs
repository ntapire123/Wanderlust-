<style>
.search-pill {
  align-items: center;
  gap: 0;
  padding: 4px 4px 4px 16px;
  border-radius: 999px;
  background: #ffffff;
  border: 1px solid #ddd;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  max-width: 420px;
}

.search-input {
  border: none;
  box-shadow: none !important;
  font-size: 0.95rem;
  padding-right: 8px;
}

.search-input:focus {
  outline: none;
  box-shadow: none;
}

.search-btn {
  border-radius: 999px;
  border: none;
  background: #ff385c;
  color: #fff;
  width: 38px;
  height: 38px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0.9rem;
}

.search-btn i {
  margin: 0;
}

/* hover/focus */
.search-btn:hover {
  background: #e23252;
  color: #fff;
}

.search-pill:focus-within {
  border-color: #ff385c;
  box-shadow: 0 0 0 2px rgba(255, 56, 92, 0.2);
}

/* responsive: let it expand nicely on small screens */
@media (max-width: 768px) {
  .search-pill {
    width: 100%;
    margin-top: 8px;
  }
}


</style>
<nav
  class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top"
>
  <div class="container-fluid">
    <% const logoSrc =
    'https://res.cloudinary.com/duv7frgnx/image/upload/v1766581278/logo_xv5gfp.jpg';
    %>
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <img
        src="<%= logoSrc %>"
        alt="HitiTrails logo"
        style="height: 32px; width: auto; margin-right: 8px"
      />
      HitiTrails
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <a class="nav-link active" href="/listings">Explore</a>
      </div>

      <!-- pretty search bar -->
      <form class="search-pill d-flex " role="search" action="/listings" method="GET">
        <input
          class="form-control search-input"
          type="search"
          name="q"
          placeholder="Search destinations"
          aria-label="Search"
        />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>
  </div>
</nav>

